{
  "framework": "nextjs",
  "buildCommand": "NODE_OPTIONS='--max-old-space-size=4096' pnpm build",
  "installCommand": "pnpm install --frozen-lockfile",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  }
}