    "pdf:test": "node scripts/test-pdf-conversion.js",
    "pdf:test-logo": "node scripts/test-logo-pdf.js",
    "pdf:test-performance": "node scripts/simple-performance-test.js",
    "pdf:test-cache": "node scripts/test-cache.js",
    "pdf:docker": "docker-compose -f docker/docker-compose.pdf.yml up -d",
    "pdf:docker-stop": "docker-compose -f docker/docker-compose.pdf.yml down",
    "config:status": "node scripts/manage-api-keys.js --status",
    "config:update": "node scripts/manage-api-keys.js --update",
    "config:interactive": "node scripts/manage-api-keys.js --interactive",
    "config:list": "node scripts/manage-api-keys.js --list",
    "config:reset": "node scripts/manage-api-keys.js --reset",
    "config:init": "node scripts/init-config.js",
    "setup:quick": "bash scripts/quick-setup.sh",
    "monitor:long-content": "curl -s http://localhost:3000/api/metrics/long-content | jq",
    "monitor:ai-services": "curl -s http://localhost:3000/api/config/ai-services | jq",
    "monitor:health": "curl -s http://localhost:3000/api/health/storage | jq",
    "test:ai-integration": "node scripts/test-ai-integration.js",
    "verify:quick": "node scripts/quick-verify.js",
    "system:check": "node scripts/system-check.js",
    "verify:final": "bash scripts/final-verify.sh",
    "logs:monitor": "node scripts/monitor-logs.js",
    "logs:view": "ls -la logs/ && echo '\\n最新日志:' && tail -20 logs/dev-server-*.log | tail -20",
    "logs:clean": "rm -f logs/dev-server-*.log && echo '日志已清理'",
    "logs:analyze": "node scripts/analyze-logs.js",
    "server:status": "node scripts/server-status.js",
    "dev:start": "node scripts/dev-server-manager.js start",
    "dev:stop": "node scripts/dev-server-manager.js stop",
    "dev:restart": "node scripts/dev-server-manager.js restart",
    "dev:status": "node scripts/dev-server-manager.js status",
    "quick-start": "bash scripts/quick-start.sh"
  },
