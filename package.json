{
  "name": "starlight-media-generator",
  "version": "1.0.62",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "dev:original": "next dev",
    "dev:restart": "bash scripts/dev-restart.sh",
    "dev:auto": "bash scripts/auto-execute.sh dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "node tests/scripts/test-markdown-export.js",
    "test:api": "node tests/api/api-endpoints.test.js",
    "test:hooks": "node tests/hooks/use-business-stream.test.js",
    "test:integration": "node tests/integration/siliconflow-compatibility.test.js",
    "test:all": "node tests/run-all-tests.js",
    "test:sequential": "pnpm run test:api && pnpm run test:hooks && pnpm run test:integration",
    "cleanup": "bash scripts/cleanup-tests.sh",
    "build:clean": "rm -rf .next && pnpm run cleanup",
    "build:prod": "pnpm run build:clean && pnpm build",
    "build:check": "node scripts/check-build-size.js",
    "build:analyze": "node scripts/analyze-bundle.js",
    "build:analyze-webpack": "ANALYZE=true pnpm build",
    "deploy:check": "node scripts/pre-deploy-check.js",
    "deploy:edgeone": "node scripts/prepare-edgeone-deploy.js",
    "deploy:prepare": "node scripts/prepare-edgeone-deploy.js",
    "health-check": "bash scripts/project-health-check.sh",
    "health-auto": "bash scripts/auto-execute.sh health",
    "setup": "bash scripts/auto-execute.sh setup",
    "auto-exec": "bash scripts/auto-execute.sh",
    "test-automation": "bash scripts/test-automation.sh",
    "check-pm": "bash scripts/check-package-manager.sh",
    "smart-dev": "bash scripts/smart-dev.sh",
    "setup-npm-alias": "bash scripts/setup-npm-alias.sh",
    "test-dev-config": "bash scripts/test-dev-commands.sh",
